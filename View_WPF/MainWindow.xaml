        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Front">

            </TabItem>
            <TabItem Header="Insert Pet">
                <Grid Margin="0,0,0,0">
                    <Label Content="Insert Pet" FontSize="30" Margin="326,20,327,324"/>
                    <Label Content="Pet Name" FontSize="15" Margin="50,90,662,272"/>
                    <Label Content="Pet Type" FontSize="15" Margin="50,130,662,232"/>
                    <Label Content="Pet Breed" FontSize="15" Margin="50,170,662,192"/>
                    <Label Content="Pet DOB" FontSize="15" Margin="50,210,662,152"/>
                    <Label Content="Pet Weight" FontSize="15" Margin="50,250,662,112"/>
                    <Label Content="Owner ID" FontSize="15" Margin="50,330,662,32"/>
                    <TextBox Name="TextBoxPetName" HorizontalAlignment="Left" Height="23" Margin="230,95,0,0" TextWrapping="Wrap" Text="" FontSize="15" VerticalAlignment="Top" Width="480"/>
                    <TextBox Name="TextBoxPetType" HorizontalAlignment="Left" Height="23" Margin="230,135,0,0" TextWrapping="Wrap" Text="" FontSize="15" VerticalAlignment="Top" Width="480"/>
                    <TextBox Name="TextBoxPetBreed" HorizontalAlignment="Left" Height="23" Margin="230,175,0,0" TextWrapping="Wrap" Text="" FontSize="15" VerticalAlignment="Top" Width="480"/>
